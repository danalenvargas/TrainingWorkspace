package com.ibm.training;

import java.util.ArrayList;

public class Dispatcher implements Runnable {
	private Service service;
	
	public Dispatcher() {
		// TODO Auto-generated constructor stub
	}
	
	public Dispatcher(Service service) {
		this.service = service;
	}

	@Override
	public void run(){
		while(true) {
			try {
				Thread.sleep(2000);
				ArrayList<Product> productArray = service.reviewProducts(EnumProdType.PERISHABLE);
				boolean foundExpired = false;
				String expiredProductList = "";
				for(Product prod : productArray) {
					Perishable peri = (Perishable) prod;
					if(peri != null && peri.getExpiresIn() < 1) {
						
					}
				}
				if(foundExpired) throw new ExpiredProductException("Dispatcher found an expired product: " + expiredProductList);
			} catch (ExpiredProductException e) {
				System.out.println(e.getMessage());
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			} 
		}
	}
}
