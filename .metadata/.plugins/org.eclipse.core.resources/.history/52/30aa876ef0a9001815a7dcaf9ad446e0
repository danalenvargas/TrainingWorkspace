function showUserDetails(userId){
	console.log("inside showUserDetails");
	console.log(userId);
	
	fetch('UserManagement?userid='+userId)
		.then(function(response){
			response.json().then(function(data){
				console.log(data);
			});
		})
		.catch(function(err){
			console.log("Fetch Error: ", err)
		});

	
	document.getElementById("editForm").style.visibility = "visible";
	document.getElementById("txtUsername").value = selectedUser.username;
	document.getElementById("txtPassword").value = selectedUser.pasword;
	document.getElementById("txtUserId").value = selectedUser.userId;
	document.getElementById("chkCreate").checked = selectedUser.canCreate;
	document.getElementById("chkRead").checked = selectedUser.canRead;
	document.getElementById("chkUpdate").checked = selectedUser.canUpdate;
	document.getElementById("chkDelete").checked = selectedUser.canDelete;
}